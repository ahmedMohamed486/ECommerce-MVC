@model Order
@inject IHttpContextAccessor iHttpContextAccessor
@{
    ViewData["Title"] = "Order Details";

    List<ProductViewModel> products = iHttpContextAccessor.HttpContext.Session.Get<List<ProductViewModel>>("products");

    if (products == null)
    {
        products = new List<ProductViewModel>();
    }
}

<br />

<h2>Order Details</h2>

<form asp-action="Checkout" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNo" class="form-control" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderNo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderNo" class="form-control" />
                    <span asp-validation-for="OrderNo" class="text-danger"></span>
                </div>
                
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderDate"  class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                
            </div>
            <br />
             
        </div>

        <div class="col-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var p in products)
                    {
                        <tr>
                            <td><img src="@p.Image" height="100px" width="150px" /></td>
                            <td>@p.Name</td>
                            <td>@p.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
      
            <div class="text-end">
                <h3>Total Price : @products.Sum(p => p.Price) </h3>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Place Order" class="btn btn-success" />
            </div>
       
        
    </div>
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}